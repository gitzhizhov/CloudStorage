<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controller">
    <HBox spacing="5.0">
            <Button maxWidth="Infinity" text="Start" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
            <Button maxWidth="Infinity" text="Stop" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Button>
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>
    <HBox spacing="1.0">
            <TextField editable="false" HBox.hgrow="ALWAYS" />
            <Button text="..." />
    </HBox>
    <TextArea editable="false" VBox.vgrow="ALWAYS" />
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
